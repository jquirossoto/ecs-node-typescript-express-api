{
  "name": "nodejs-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "build:watch": "onchange 'src/**/*.ts' -- npm run build",
    "build:clean": "rm -rf dist",
    "prestart": "npm run build",
    "start": "node .",
    "start:watch": "onchange 'dist/**/*.js' -- npm run start",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --coverage --watchAll",
    "test:coverage:view": "serve coverage/lcov-report",
    "test:coverage:clean": "rm -rf coverage",
    "docker:up": "docker-compose -f ./docker-compose.yml up -d",
    "docker:down": "docker-compose kill",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:create": "prisma migrate dev --create-only",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "speccy": "speccy resolve -o openapi.yml -j openapi.json",
    "speccy:lint": "speccy lint -j openapi.json"
  },
  "author": "jquirossoto",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.0.2",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.4",
    "@types/source-map-support": "^0.5.4",
    "jest": "^27.2.1",
    "jest-mock-extended": "^2.0.2-beta2",
    "onchange": "^7.1.0",
    "prisma": "^3.0.2",
    "serve": "^12.0.1",
    "source-map-support": "^0.5.20",
    "speccy": "^0.11.0",
    "ts-jest": "^27.0.5",
    "tslint": "^6.1.3",
    "typescript": "^4.4.3"
  }
}
