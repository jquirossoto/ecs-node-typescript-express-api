{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "definitions": {
        "id": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "number",
                    "title": "Id",
                    "description": "Identifier"
                }
            }
        },
        "category": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "title": "Name",
                    "description": "Category name",
                    "minLength": 3,
                    "maxLength": 50
                }
            },
            "additionalProperties": false
        },
        "owner": {
            "type": "object",
            "properties": {
                "firstName": {
                    "type": "string",
                    "title": "First name",
                    "description": "Owner's first name.",
                    "minLength": 2
                },
                "middleInitial": {
                    "type": "string",
                    "title": "Middle initial",
                    "description": "Owner's middle initial.",
                    "minLength": 1,
                    "maxLength": 1
                },
                "lastName": {
                    "type": "string",
                    "title": "Last name",
                    "description": "Owner's last name.",
                    "minLength": 2
                },
                "identificationNumber": {
                    "type": "string",
                    "title": "Identification number",
                    "description": "Alphanumeric value that carries the identification number issued to the owner by the government or an authorized national entity."
                },
                "address": {
                    "$ref": "#/definitions/address"
                }
            },
            "additionalProperties": false
        },
        "address": {
            "type": "object",
            "title": "Address",
            "description": "Owner's address.",
            "required": [ "street", "city", "state", "countryCode", "postalCode" ],
            "properties": {
                "street": {
                    "type": "string",
                    "title": "Street"
                },
                "buildingNumber": {
                    "type": "string",
                    "title": "Building number"
                },
                "city": {
                    "type": "string",
                    "title": "City"
                },
                "state": {
                    "type": "string",
                    "title": "State"
                },
                "countryCode": {
                    "type": "string",
                    "title": "Country code",
                    "description": "2-character alpha country code. Refer to ISO country codes.",
                    "minLength": 2,
                    "maxLength": 2
                },
                "postalCode": {
                    "type": "string",
                    "title": "Postal code"
                }
            },
            "additionalProperties": false
        },
        "pet": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "title": "Name",
                    "description": "Pet's name",
                    "minLength": 2
                },
                "status": {
                    "type": "string",
                    "title": "Status",
                    "description": "Pet's status",
                    "enum": [ "AVAILABLE", "PENDING", "SOLD" ]
                },
                "categoryId": {
                    "type": "number",
                    "title": "Category Id",
                    "description": "Category identifier"
                },
                "ownerId": {
                    "type": "number",
                    "title": "Owner Id",
                    "description": "Owner identifier"
                }
            },
            "additionalProperties": false
        }
    }
}